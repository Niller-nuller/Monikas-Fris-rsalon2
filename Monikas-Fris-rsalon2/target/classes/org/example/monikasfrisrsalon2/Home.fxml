<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.monikasfrisrsalon2.a_controller.BookingController">

    <AnchorPane fx:id="mainPane" prefHeight="1080" prefWidth="1920" style="-fx-background-color: linear-gradient(to bottom right, #C2B280, #DECAB7);" stylesheets="@Styles/Style.css">
        <children>
            <fx:include source="Menu.fxml" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" />
            <MFXPaginatedTableView
                    fx:id="active_AppointmentsTable"
                    layoutX="520" layoutY="175"
                    prefWidth="900"
                    rowsPerPage="6"
                    styleClass="appointments-table"/>
            <MFXPaginatedTableView
                    fx:id="history_AppointmentsTable"
                    layoutX="520" layoutY="575"
                    prefWidth="900"
                    rowsPerPage="6"
                    styleClass="appointments-table"/>
            <Label alignment="CENTER" layoutX="820.0" layoutY="50.0" prefHeight="50.0" prefWidth="300.0" styleClass="title" text="Oversigt" />
            <MFXButton layoutX="520" layoutY="100" prefHeight="50" prefWidth="175" style="-fx-border-radius: 0" styleClass="ghost" text="    Opret bestilling" onAction="#openPopup">
                <graphic>
                    <FontIcon iconColor="white" iconLiteral="far-calendar-plus" iconSize="22" />
                </graphic>
            </MFXButton>
        </children>
    </AnchorPane>

    <StackPane fx:id="overlay" visible="false" managed="false"
               style="-fx-background-color: rgba(0,0,0,0.35);">

        <!-- The popup itself -->
        <AnchorPane fx:id="popup" prefWidth="420" prefHeight="260"
                    style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 18, 0.2, 0, 6);">

            <Label text="Create customer" style="-fx-font-size: 18; -fx-font-weight: bold;"
                   layoutX="16" layoutY="12"/>

            <Label text="Name" layoutX="16" layoutY="60"/>
            <TextField fx:id="nameField" layoutX="16" layoutY="80" prefWidth="388"/>

            <Label text="Email" layoutX="16" layoutY="120"/>
            <TextField fx:id="emailField" layoutX="16" layoutY="140" prefWidth="388"/>

            <Button text="Cancel" onAction="#closePopup" layoutX="240" layoutY="200"/>
            <Button text="Save" onAction="#savePopup" layoutX="320" layoutY="200" defaultButton="true"/>
        </AnchorPane>
    </StackPane>
</StackPane>
